# Application
NEXT_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_CONTACT_EMAIL=contact@gemsofindia.org

# Database (automatically set by docker-compose)
# DATABASE_URL=postgresql://gems:gems_password@postgres:5432/gems_of_india

# Redis (automatically set by docker-compose)
# REDIS_URL=redis://redis:6379

# Authentication
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=development_secret_change_in_production

# Google OAuth (optional - add your keys)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CLIENT_ID=test

# Cloudflare Turnstile (Anti-bot)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
